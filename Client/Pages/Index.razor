@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<h1>Welcome to your new app. </h1>
<h1>API result: @result </h1>

<button @onclick=click>Clicked @times </button>

@code {
    string result;
    int times;
    void click() => times++;

    protected override async Task OnInitializedAsync()
    {
        var httpClient = new HttpClient();
        result = await httpClient.GetStringAsync("/api/AddFunction?name=Cort");
    } 
}